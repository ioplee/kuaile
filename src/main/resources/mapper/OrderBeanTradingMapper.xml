<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hw.dao.OrderBeanTradingDAO">

    <resultMap id="BaseResultMap" type="com.hw.bean.VO.OrderBeanTradingVO">
        <id column="trading_id" property="tradingId" />
        <result column="trading_type" property="tradingType" />
        <result column="seller_id" property="sellerId" />
        <result column="buyer_id" property="buyerId" />
        <result column="trading_date" property="tradingDate" />
        <result column="bean_counts" property="beanCounts" />
        <result column="base_counts" property="baseCounts" />
        <result column="rebate_counts" property="rebateCounts" />
        <result column="info_status" property="infoStatus" />
    </resultMap>

    <sql id="Base_Column_List">
        trading_type,
        seller_id,
        buyer_id,
        trading_date,
        bean_counts,
        base_counts,
        rebate_counts,
        info_status,
        trading_id
    </sql>

    <select id="getOrderBeanTradingByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from order_bean_trading
        where trading_id = #{PRI}
    </select>

    <insert id="insertOrderBeanTrading" keyColumn="trading_id" keyProperty="tradingId" parameterType="com.hw.bean.PO.OrderBeanTradingPO" useGeneratedKeys="true">
        insert into order_bean_trading (
            trading_type,
            seller_id,
            buyer_id,
            trading_date,
            bean_counts,
            base_counts,
            rebate_counts,
            info_status,
            gmt_create,
            gmt_modified
        ) values (
            #{tradingType},
            #{sellerId},
            #{buyerId},
            #{tradingDate},
            #{beanCounts},
            #{baseCounts},
            #{rebateCounts},
            #{infoStatus},
            NOW(),
            NOW()
        )
    </insert>

    <update id="updateOrderBeanTrading" parameterType="com.hw.bean.PO.OrderBeanTradingPO">
        update order_bean_trading set
            trading_type = #{tradingType},
            seller_id = #{sellerId},
            buyer_id = #{buyerId},
            trading_date = #{tradingDate},
            bean_counts = #{beanCounts},
            base_counts = #{baseCounts},
            rebate_counts = #{rebateCounts},
            info_status = #{infoStatus},
            gmt_modified = NOW()
        where trading_id = #{tradingId}
    </update>

    <select id="getPageList" parameterType="com.hw.bean.BO.QueryOrderBeanTradingPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from order_bean_trading
        limit #{pageIndex},#{pageSize}
    </select>

    <select id="getPageCount" parameterType="com.hw.bean.BO.QueryOrderBeanTradingPage" resultType="java.lang.Integer">
        select
            count(1)
        from order_bean_trading
    </select>

</mapper>